{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": [
      "es2015",
      "es2020.intl",
      "DOM"
    ],
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}
